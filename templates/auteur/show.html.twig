{% extends 'base1.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto">
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-2xl font-bold text-slate-800 dark:text-white">Détails de l'Auteur</h1>
            <div class="flex gap-3">
                <a href="{{ path('app_auteur_index') }}" class="px-4 py-2 text-sm font-semibold rounded-lg border border-slate-300 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-800">Retour</a>
                <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" class="px-4 py-2 text-sm font-semibold text-white rounded-lg bg-gradient-to-tl from-blue-600 to-blue-400 shadow-md hover:shadow-xl">Modifier</a>
            </div>
        </div>

        <div class="overflow-hidden bg-white dark:bg-slate-850 shadow-xl dark:shadow-dark-xl rounded-2xl mb-6">
            <div class="divide-y divide-slate-200 dark:divide-slate-700">
                <div class="px-6 py-4 flex justify-between"><span class="text-sm font-semibold text-slate-600 dark:text-slate-300">Id</span><span class="text-sm text-slate-800 dark:text-white">{{ auteur.id }}</span></div>
                <div class="px-6 py-4 flex justify-between"><span class="text-sm font-semibold text-slate-600 dark:text-slate-300">Nom</span><span class="text-sm text-slate-800 dark:text-white">{{ auteur.nom }}</span></div>
                <div class="px-6 py-4 flex justify-between"><span class="text-sm font-semibold text-slate-600 dark:text-slate-300">Prénom</span><span class="text-sm text-slate-800 dark:text-white">{{ auteur.prenom }}</span></div>
                <div class="px-6 py-4 flex justify-between"><span class="text-sm font-semibold text-slate-600 dark:text-slate-300">Email</span><span class="text-sm text-slate-800 dark:text-white">{{ auteur.email }}</span></div>
                <div class="px-6 py-4 flex justify-between"><span class="text-sm font-semibold text-slate-600 dark:text-slate-300">Spécialité</span><span class="text-sm text-slate-800 dark:text-white">{{ auteur.specialite ?? '—' }}</span></div>
                <div class="px-6 py-4 flex items-start justify-between gap-6">
                    <span class="text-sm font-semibold text-slate-600 dark:text-slate-300">Bio courte</span>
                    <span class="text-sm text-slate-800 dark:text-white max-w-xl whitespace-pre-line">{{ auteur.bio ?? '—' }}</span>
                </div>
            </div>
        </div>

        <div class="overflow-hidden bg-white dark:bg-slate-850 shadow-xl dark:shadow-dark-xl rounded-2xl">
            <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
                <h2 class="text-lg font-semibold text-slate-800 dark:text-white">Cours assignés</h2>
            </div>
            <div class="px-6 py-4">
                <ul class="list-disc pl-6 space-y-1">
                {% for cours in auteur.cours %}
                    <li class="text-sm text-slate-800 dark:text-slate-200"><span class="font-medium">{{ cours.title }}</span> - {{ cours.description }}</li>
                {% else %}
                    <li class="text-sm text-slate-500 dark:text-slate-400">Aucun cours assigné</li>
                {% endfor %}
                </ul>
            </div>
        </div>

        <div class="flex justify-end pt-6">
            {{ include('auteur/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
