{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}

<h1>Profile</h1>

<p> <strong>Email:</strong> {{ user.email }}</p>
<p> <strong>name:</strong> {{ user.name }}</p>
<p> <strong>lastname:</strong> {{ user.lastname }}</p>
<p> <strong>birthdate:</strong> {{ user.birthdate| date('d/m/Y') }}</p>

<div class="mt-3">
    <a href="{{ path('app_profile_edit') }}" class="btn btn-primary me-2">
        <i class="fas fa-edit me-1"></i> Modifier le profil
    </a>
    <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Retour au tableau de bord
    </a>
</div>
{% endblock %}
