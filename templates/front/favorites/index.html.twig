{% extends 'base.html.twig' %}

{% block title %}Mes favoris{% endblock %}

{% block body %}
  <div class="container py-5">
    <h1 class="mb-4">Mes favoris</h1>

    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="alert alert-{{ label }}">{{ message }}</div>
      {% endfor %}
    {% endfor %}

    {% if items is empty %}
      <div class="alert alert-info">Aucun cours dans vos favoris.</div>
      <a href="{{ path('app_home_courses') }}" class="btn btn-primary">Voir les cours</a>
    {% else %}
      <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for c in items %}
          <div class="col">
            <div class="card h-100 shadow-sm position-relative">
              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title mb-0">{{ c.title }}</h5>
                  {% if c.category is defined and c.category %}
                    <span class="badge bg-info text-dark">{{ c.category }}</span>
                  {% endif %}
                </div>
                <p class="card-text mb-2" style="display:-webkit-box;-webkit-line-clamp:4;-webkit-box-orient:vertical;overflow:hidden;">{{ c.description }}</p>

                <div class="mb-3">
                  <span class="badge bg-primary">{{ c.price }} DT</span>
                </div>

                <div class="mt-auto d-flex gap-2">
                  <a href="{{ path('app_home_course_show', { id: c.id }) }}" class="btn btn-sm btn-primary">DÃ©tails</a>
                  <a href="{{ path('app_fav_toggle', { id: c.id }) }}" class="btn btn-sm btn-outline-danger">
                    <i class="fa fa-heart"></i> Retirer
                  </a>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
{% endblock %}
